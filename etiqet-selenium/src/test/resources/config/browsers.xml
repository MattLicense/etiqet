<?xml version="1.0" encoding="UTF-8"?>
<Browsers>
    <Firefox name="default" driver_path="src/test/resources/drivers/geckodriver.exe">
        <headless>false</headless>
        <screenshot_on_exit>true</screenshot_on_exit>
        <close_on_exit>true</close_on_exit>
    </Firefox>
    <Firefox name="firefox" driver_path="src/test/resources/drivers/geckodriver.exe">
        <headless>false</headless>
        <screenshot_on_exit>true</screenshot_on_exit>
        <close_on_exit>true</close_on_exit>
        <keywords>
            <keyword>foo</keyword>
            <keyword>bar</keyword>
        </keywords>
    </Firefox>
    <Chrome name="chrome" driver_path="src/test/resources/drivers/chromedriver.exe">
        <headless>false</headless>
        <screenshot_on_exit>true</screenshot_on_exit>
        <close_on_exit>true</close_on_exit>
    </Chrome>
    <Android name="android" driver_path="src/test/resources/drivers/chromedriver.exe">
        <remote_url>https://www.google.com</remote_url>
        <headless>false</headless>
        <screenshot_on_exit>true</screenshot_on_exit>
        <close_on_exit>true</close_on_exit>
        <capabilities>
            <capability>
                <name>test</name>
                <value>my value</value>
            </capability>
        </capabilities>
    </Android>
</Browsers>
